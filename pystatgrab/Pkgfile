# Depends on:	libstatgrab

# Recommended:	
# Optional:	
# Category:	python binding

name=pystatgrab
version=0.4
release=1
source=(ftp://ftp.i-scream.org/pub/i-scream/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
	python setup.py install --root=$PKG
	chown -R root:root $PKG
}

