# Description: Compress::Zlib - Interface to zlib compression library.
# URL: http://search.cpan.org/~pmqs/Compress-Zlib-1.42/Zlib.pm
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Oleskiy V. Khilkevich, centericq at ukr dot net
# Depends on: p5-compress-raw-zlib p5-io-compress-gzip


name=p5-compress-zlib
version=2.001
release=1
source=(http://www.perl.com/CPAN/authors/id/P/PM/PMQS/Compress-Zlib-$version.tar.gz)

build() {
	cd Compress-Zlib-$version
	#patch -p0 -i $SRC/use-system-zlib.patch
	
	perl Makefile.PL
	make OPTIMIZE="$CFLAGS"
	make DESTDIR=$PKG install

	# Remove perlcrap
	find $PKG \
		-name '.packlist' -delete -or \
		-name '*.bs' -delete -or \
		-name 'autosplit.ix' -delete -or \
		-name 'perllocal.pod' -delete

	# Remove empty directories
	find $PKG -depth -empty -exec rm -rf {} \;
}

