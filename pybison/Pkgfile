# Depends on: pyrex

name=pybison
version=0.1.8
release=1
source=(http://www.freenet.org.nz/python/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
	python setup.py install --root=$PKG
	chown -R root:root $PKG
}
