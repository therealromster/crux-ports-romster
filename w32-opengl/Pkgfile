release=1
source=(http://www.libsdl.org/extras/win32/common/opengl-devel.tar.gz)

build() {
	install -d $PKG/usr/share/mingw32
	cp -R $SRC/* $PKG/usr/share/mingw32/
	chown -R root:root $PKG
}
