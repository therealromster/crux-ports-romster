# $Id:
# Description:	Wrapper for chroot, to build ports in a safe enviorment on CRUX.
# URL:		http://romster.shortcircuit.net.au/crux/projects/build-safe/
# Maintainer:	Danny Rawlins, <romster@shortcircuit.net.au>
# Packager:	Danny Rawlins, <romster@shortcircuit.net.au>
# Depends on:	

name=safe-build
version=0.0.0-alpha-16
release=1
source=($name.in $name-shutdown.in $name.conf)

build() {
	#cd $name-$version
	#./configure --prefix=/usr
	#make && make DESTDIR=$PKG install
	#rm -r $PKG/usr/share/doc
	sed -i -e "s|#VERSION#|$version|g" $name.in
	install -D -m755 $name.in $PKG/usr/sbin/$name
	install -D -m755 $name-shutdown.in $PKG/usr/share/$name/$name-shutdown
	install -D -m644 $name.conf $PKG/etc/$name.conf
	chown -R root:root $PKG
}

