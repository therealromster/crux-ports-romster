# $Id: 
# Description:	DNS Flood Detector.
# URL:			http://www.adotout.com/
# Maintainer:	Danny Rawlins, <romster@shortcircuit.net.au>
# Packager:		Danny Rawlins, <romster@shortcircuit.net.au>
# Depends on:	libpcap

name=dnsflood
version=1.12
release=1
source=(http://www.adotout.com/dnsflood-$version.tgz)

build() {
	cd dns_flood_detector
	mv makefiles/Makefile-Linux ./Makefile
	make
	install -D -m755 -groot -oroot dns_flood_detector $PKG/usr/sbin/dns_flood_detector
	chown -R root.root $PKG
}
