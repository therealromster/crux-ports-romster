name=pdfcrack
version=0.8
release=1
source=(http://dl.sourceforge.net/sourceforge/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
	#./configure --prefix=/usr
	make

	install -d $PKG/usr/include/$name
	install -D pdfcrack $PKG/usr/bin/pdfcrack
	#install pdfreader $PKG/usr/bin/
	#install testreader $PKG/usr/bin/

	install *.o $PKG/usr/include/$name/
	#make DESTDIR=$PKG install
	chown -R root:root $PKG
}

