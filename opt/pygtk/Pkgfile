# Description: Set of bindings for the GTK widget set.
# URL: http://www.pygtk.org/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Stoyan Zhekov, zhware at hotpop dot com
# Depends on: pygobject pycairo

name=pygtk
version=2.12.1
release=2
url="ftp://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}"
up2date="lynx -dump $url |grep 'LATEST-IS-' |sed -ne 's/.*LATEST-IS-\(.*\)$/\1/' -e '$ p'"
source=($url/$name-$version.tar.bz2
	$name-2.12.1-libtool-path.patch)

build() {
    cd $name-$version
	 sed -i -e 's|^SUBDIRS = codegen . $(GTK_SUBDIR) examples tests docs|SUBDIRS = codegen . $(GTK_SUBDIR) tests|' Makefile.am
	 patch -p 1 -i $SRC/$name-2.12.1-libtool-path.patch
	 aclocal -I m4
    autoheader
    autoconf
    libtoolize --force --automake
    automake -a --gnu --include-deps
    ./configure --prefix=/usr
    make
    make DESTDIR=$PKG install
}

