# Description: Graphics library for the Linux framebuffer device.
# URL: http://www.directfb.org/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Tilman Sauerbeck, tilman at crux dot nu
# Depends on: zlib

name=directfb
version=1.1.1
release=1
source=(http://www.directfb.org/downloads/Core/DirectFB-$version.tar.gz)

build() {
	local EXTRA_ARGS

	export \
		CFLAGS="-O3 $(echo $CFLAGS |sed -e 's/-O[s0-3] //')" \
		CXXFLAGS="-O3 $(echo $CXXFLAGS |sed -e 's/-O[s0-3] //')"

	# uncomment the following line to build with support for the multi
	# app core:
	# EXTRA_ARGS="--enable-multi"

	cd DirectFB-$version

	./configure \
		--prefix=/usr	\
		--mandir=/usr/man \
		--enable-zlib \
		$EXTRA_ARGS

	make
	make DESTDIR=$PKG install
}

