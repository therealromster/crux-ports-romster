# Description: wxWidgets for GTK+.
# URL: http://www.wxwidgets.org/
# Packager: Antti Nykanen, aon at iki dot fi
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Depends on: gtk

name=wxgtk
version=2.8.8
release=1
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=9863 |grep 'wxGTK-' |sed -ne 's/.*-\(.*\)\.t.*/\1/' -e '1 p'"
source=(http://dl.sourceforge.net/wxwindows/wxGTK-$version.tar.bz2)


build() {
	cd wxGTK-$version

	./configure \
		--prefix=/usr \
		--enable-unicode \
		--with-opengl

	make
	make prefix=$PKG/usr install

	cd contrib/src
	make
	make DESTDIR=$PKG install

	ln -sf /usr/lib/wx/config/gtk2-unicode-release-${version%.*} $PKG/usr/bin/wx-config
	rm -rf $PKG/usr/share/locale
}

