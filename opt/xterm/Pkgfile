# Description: The standard termulator.
# URL: http://dickey.his.com/xterm/xterm.html
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Han Boetes, han at mijncomputer dot nl
# Depends on: xorg-libxaw

name=xterm
version=237
release=1
up2date="lynx -dump ftp://invisible-island.net/xterm/|grep tgz$|sed -ne 's/.*-\(.*\)\.t.*/\1/' -e '$ p'"
source=(ftp://invisible-island.net/xterm/xterm-$version.tgz
	configure.diff)

build() {
	cd xterm-$version

	[ -z "$BASH_VERSION" ] && patch -p 0 -i $SRC/configure.diff

	./configure \
		--prefix=/usr \
		--disable-nls \
		--enable-256-color \
		--enable-wide-chars

	make
	make install DESTDIR=$PKG
	#chmod 0755 $PKG/usr/bin/xterm
}

