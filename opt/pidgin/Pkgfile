# Description: A multi-protocol instant messaging client.
# URL: http://pidgin.im/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Simone Rota, sip at crux dot nu
# Depends on: xorg-libxscrnsaver startup-notification p5-xml-parser gtk gnutls gtkspell

name=pidgin
version=2.5.0
release=1
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=235 |grep '.tar.bz2' |sed -ne 's/.*$name-\(.*\)\.t.*/\1/' -e '1 p'"
source=(http://dl.sourceforge.net/sourceforge/$name/$name-$version.tar.bz2)

build() {
	cd $name-$version

	sed -i -e 's/x$GCONFTOOL/xno/' configure

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--disable-avahi \
		--disable-dbus \
		--disable-gevolution \
		--disable-gstreamer \
		--disable-meanwhile \
		--disable-nls \
		--disable-nss \
		--disable-perl \
		--disable-tcl \
		--enable-gnutls \
		--enable-gtkspell \
		--with-dynamic-prpls='gg,irc,jabber,msn,novell,oscar,qq,sametime,silc,simple,yahoo,zephyr'

	make
	make DESTDIR=$PKG install
} 

