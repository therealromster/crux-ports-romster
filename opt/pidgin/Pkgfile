# Description: A multi-protocol instant messaging client.
# URL: http://pidgin.im/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Simone Rota, sip at crux dot nu
# Depends on: nss startup-notification p5-xml-parser gtk dbus

name=pidgin
version=2.4.3
release=1
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=235' |grep 'tar.bz2$' |sed -ne 's/.*-\(.*\)\.t.*/\1/' -e '1 p'"
source=(http://dl.sourceforge.net/sourceforge/$name/$name-$version.tar.bz2)

build() {
	cd $name-$version
	sed -i -e 's/x$GCONFTOOL/xno/' configure

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--disable-perl \
		--disable-nls \
		--disable-gnutls \
		--with-nspr-includes=/usr/include/nspr \
		--with-nss-includes=/usr/include/nss \
		--with-nspr-libs=/usr/lib \
		--with-nss-libs=/usr/lib \
		--disable-gtkspell \
		--disable-meanwhile \
		--disable-nm \
		--disable-gevolution \
		--disable-gstreamer \
		--with-dynamic-prpls="gg,irc,jabber,msn,novell,oscar,qq,sametime,silc,simple,yahoo,zephyr"

	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale
}

