# URL: http://imagemagick.sourceforge.net/
# Description: Image manipulation wizard.
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: danm, maol, jaeger
# Depends on: lzma freetype ghostscript lcms libungif libxml2

name=imagemagick
version=6.3.8-3
release=1
source=(http://dl.sourceforge.net/sourceforge/imagemagick/ImageMagick-$version.tar.lzma)

build () {
	# temp fix untill/if pkgutils supports lzma
	if [ -e $SRC/$name-snapshot-$version.tar.lzma ]; then
		tar --use-compress-program=lzma -xf $name-snapshot-$version.tar.lzma
		rm $name-snapshot-$version.tar.lzma
	fi

	cd ImageMagick-${version/-*/}

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--disable-static \
		--enable-lzw \
		--with-perl

	make
	install -d $PKG/usr/
	make DESTDIR=$PKG PREFIX=$PKG/usr install

	rm -r $PKG/usr/lib/perl5/?.?.? # empty directory
	rm -r $PKG/usr/share/doc
	rm $PKG/usr/share/ImageMagick-${version/-*}/{ChangeLog,LICENSE,NEWS}
	
	find $PKG -type f \
  		\( -name perllocal.pod -o \
		-name .packlist \) -delete
}

