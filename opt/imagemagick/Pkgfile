# URL: http://imagemagick.sourceforge.net/
# Description: Image manipulation wizard.
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: danm, maol, jaeger
# Depends on: lzma ghostscript jasper lcms librsvg libungif openexr

name=imagemagick
version=6.3.8-11
release=1
source=(ftp://ftp.imagemagick.org/pub/ImageMagick/ImageMagick-$version.tar.lzma)
diff=(http://romster.shortcircuit.net.au/crux/source/imagemagick/)

build () {
	# temp fix untill/if pkgutils supports lzma
	if [ -e $SRC/ImageMagick-$version.tar.lzma ]; then
		tar --use-compress-program=lzma -xf ImageMagick-$version.tar.lzma
		rm ImageMagick-$version.tar.lzma
	fi

	cd ImageMagick-${version/-*/}

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--disable-static \
		--with-perl

	make
	install -d $PKG/usr/
	make DESTDIR=$PKG PREFIX=$PKG/usr install

	rm -r $PKG/usr/lib/perl5/?.?.? # empty directory
	rm -r $PKG/usr/share/doc
	rm $PKG/usr/share/ImageMagick-${version/-*}/{ChangeLog,LICENSE,NEWS}
	
	find $PKG -type f \
  		\( -name perllocal.pod -o \
		-name .packlist \) -delete
}

