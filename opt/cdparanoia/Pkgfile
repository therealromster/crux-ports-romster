# Description: CDDA extraction tool with jitter correction.
# URL: http://xiph.org/paranoia/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Juergen Daubert, juergen dot daubert at t-online dot de

name=cdparanoia
version=10.2
release=2
source=(http://downloads.xiph.org/releases/$name/$name-III-$version.src.tgz
	$name-3.10.2-gcc43.patch
	$name-3.10.2-Makefile.in.patch
	$name-3.10.2-use-destdir.patch)

build() {
	cd $name-III-$version

	patch -p 1 -i $SRC/$name-3.10.2-gcc43.patch
	patch -p 1 -i $SRC/$name-3.10.2-Makefile.in.patch
	patch -p 1 -i $SRC/$name-3.10.2-use-destdir.patch
	autoreconf

	./configure \
		--prefix=/usr \
		--mandir=/usr/man

	make
	make DESTDIR=$PKG install
}

