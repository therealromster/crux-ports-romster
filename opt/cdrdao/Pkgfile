# Description: Record audio or data disc's in disk-at-once (DAO) mode.
# URL: http://cdrdao.sourceforge.net/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Michael Ablassmeier, michael.ablassmeier at holzkirchen dot by dot aok dot de 
# Depends on: 

name=cdrdao
version=1.2.2
release=2
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=2171 |grep tar.bz2 |sed -ne 's/.*$name-\(.*\)\.t.*/\1/' -e '1 p'"
source=(http://dl.sourceforge.net/sourceforge/$name/$name-$version.tar.bz2
	$name-1.2.2-gcc43.patch)

build() {
 	cd $name-$version

	patch -p 1 -i $SRC/$name-1.2.2-gcc43.patch

	./configure \
		--prefix=/usr \
		--without-lame

	make
	install -d $PKG/usr
	make prefix=$PKG/usr install

	chown root:cdrom $PKG/usr/bin/cdrdao
	chmod u+s-w,o-x $PKG/usr/bin/cdrdao


}
