# Description: An all-platform Edonkey client.
# URL: http://www.amule.org/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Daniel Walpole, daniel at walpole dot id dot au
# Depends on: wxgtk crypto++

name=amule
sname=aMule
version=2.2.5
release=1
source=(http://dl.sourceforge.net/sourceforge/$name/$sname-$version.tar.bz2)
up2date_url="http://sourceforge.net/projects/$name/files/"

build() {
	CXXFLAGS+=' -fno-visibility-inlines-hidden'
	cd $sname-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--disable-nls \
		--disable-debug \
		--disable-static \
		--enable-amule-daemon \
		--enable-optimize \
		--enable-alc \
		--enable-alcc \
		--enable-static=no

	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/{share/doc,man/??}
}
