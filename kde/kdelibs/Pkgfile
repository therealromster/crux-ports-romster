#won't compile yet -- fam

name=kdelibs
version=3.96.0
release=1
source=(http://download.kde.org/unstable/${version%.*}/src/kdelibs-$version.tar.bz2)

build() {
	cd kdelibs-$version

	install -d build
	cd build

	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_MAN_INSTALL_DIR=/usr/man ..

	make
	make DESTDIR=$PKG install
}

