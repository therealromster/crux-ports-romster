# Description: KDE games.
# URL: http://www.kde.org/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: sten, nick dot steeves at shaw dot ca
# Depends on: kdebase

name=kdegames
version=3.5.8
release=1
source=(http://download.kde.org/stable/$version/src/kdegames-$version.tar.bz2 \
kdegames-sh.patch)

build() {
	cd kdegames-$version
	#patch -p1 < $SRC/kdegames-sh.patch

	aclocal
	automake
	perl admin/am_edit
	autoconf

	./configure	\
		--prefix=/usr \
		--disable-setgid \
		--disable-debug \
		--disable-dependency-tracking \
		--enable-final

	make
	make DESTDIR=$PKG install
}

