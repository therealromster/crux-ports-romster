# Description: Base set of libraries needed by KDE programs.
# URL: http://www.kde.org/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: sten, nick dot steeves at shaw dot ca
# Depends on: perl db sudo libidn imlib hicolor-icon-theme libart_lgpl qt3 audiofile libxml2 libxslt libpcre openssl gnupg gpgme gamin aspell cups openldap freeglut arts xorg-libxext

name=kdelibs3
version=3.5.8
release=2
source=(http://download.kde.org/stable/$version/src/kdelibs-$version.tar.bz2 \
	http://www.kde-look.org/CONTENT/content-files/10888-bt.tar.gz \
	httpkio.patch)

build() {
	cd kdelibs-$version
	
	# http://websvn.kde.org/?view=rev&revision=726539
	patch -p1 -i $SRC/httpkio.patch

	./configure	\
		--prefix=/usr \
		--with-distribution="CRUX" \
		--enable-sendfile \
		--enable-inotify \
		--enable-mitshm \
		--with-alsa \
		--with-ssl \
		--without-hspell \
		--disable-debug \
		--disable-dependency-tracking \
		--enable-final

	make
	make DESTDIR=$PKG install

	cd ../bt
	cp -r * $PKG/usr/share/icons/crystalsvg/

	echo Icon=bt >> $PKG/usr/share/mimelnk/application/x-bittorrent.desktop
	echo PrintSystem=cups >> $PKG/usr/share/config/kdeprintrc

	rm -rf \
		$PKG/usr/share/icons/hicolor/index.theme \
		$PKG/usr/include/ltdl.h
	
	find $PKG/usr/share/apps \( -name 'LICENSES' -o -name 'README*' -o -name 'ChangeLog' -o -name 'TODO' -o -name 'BUGS' \) -delete
}

