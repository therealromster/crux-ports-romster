name=stl
version=3.3
release=1
source=(http://www.sgi.com/tech/stl/stl.tar.gz)

build() {
	install -d $PKG/usr/include
	mv * $PKG/usr/include/
	cd $PKG/usr/include
	chmod -R 644 *
	chown -R root:root $PKG
}

