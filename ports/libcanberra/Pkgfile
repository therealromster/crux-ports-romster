# Description: mplementation of the XDG sound theme and name specifications.
# URL: http://0pointer.de/lennart/projects/libcanberra/
# Maintainer: Danny Rawlins, crux at romster dot me
# Packager: Alan Mizrahi, alan at mizrahi dot com dot ve
# Depends on: libvorbis
# Optional: pulseaudio gstreamer alsa-lib

name=libcanberra
version=0.30
release=1
source=(http://0pointer.de/lennart/projects/$name/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-gtk-doc \
		--disable-gtk-doc-html \
		--disable-gtk3 \
		--disable-oss

	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/doc $PKG/usr/share/gtk-doc
}
