# Description: Xtables-addons is the proclaimed successor to patch-o-matic(-ng). It contains extensions that were not accepted in the main Xtables package.
# URL: http://jengelh.medozas.de/projects/xtables/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Danny Rawlins, monster dot romster at gmail dot com
# Depends on: iptables geoip_iv0_database

name=xtables-addons
version=1.6
release=1
url='http://dev.computergmbh.de/files/xtables'
up2date="lynx -dump '$url/?C=D;O=A' |grep tar.bz2 |sed -e 's/.*-\(.*\)\.t.*/\1/' -e 'q'"
source=($url/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--mandir=/usr/man \
		--disable-dependency-tracking

	make
	make DESTDIR=$PKG install
	chmod a-x $PKG/usr/lib/xtables/*.so
	rm $PKG/lib/modules/$(uname -r)/modules.*

	#remove ipset there is a ipset package
	rm \
		$PKG/usr/lib/xtables/libipset_* \
		$PKG/usr/man/man8/ipset.8 \
		$PKG/usr/sbin/ipset

	rmdir $PKG/usr/sbin
}
