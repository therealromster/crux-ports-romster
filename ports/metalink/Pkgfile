# Description: An open standard that bundles the various ways (FTP/HTTP/P2P) to get files into one format for easier downloads.
# URL: http://metalinks.sourceforge.net/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Younes Hafri, ycrux at club dash internet dot fr
# Depends on: boost libgcrypt

name=metalink
version=0.3.3
release=1
source=(http://dl.sourceforge.net/sourceforge/metalinks/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--disable-dependency-tracking

	make
	make DESTDIR=$PKG install
}

