# Description: Array processing for numbers, strings, records, and objects with Python.
# URL: http://numeric.scipy.org/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Danny Rawlins, romster at shortcircuit dot net dot au
# Depends on: python

name=numpy
version=1.3.0
release=1
source="http://downloads.sourceforge.net/sourceforge/$name/$name-$version.tar.gz"
up2date_url="http://sourceforge.net/projects/$name/files/"

build() {
	CFLAGS+=' -fno-strict-aliasing'
	cd $name-$version
	python setup.py install --root=$PKG
	rm $PKG/usr/lib/python2.?/site-packages/numpy/{COMPATIBILITY,*.txt}

	rm -r \
		$PKG/usr/lib/python2.?/site-packages/numpy/doc \
		$PKG/usr/lib/python2.?/site-packages/numpy/f2py/docs

}
