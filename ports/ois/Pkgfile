# Description: Library for using all kinds of Input Devices.
# URL: http://sourceforge.net/projects/wgois/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: nacho
# Depends on: x11

# Recommended:	
# Optional:	
# Category:	library

name=ois
version=1.0RC1
release=1
source=(http://dl.sourceforge.net/sourceforge/wgois/ois-$version.tar.gz)
 
build() {
	cd ois-$version

	# ./bootstrap
	libtoolize --force
	aclocal $ACLOCAL_FLAGS
	autoheader
	
	automake \
		--include-deps \
		--add-missing \
		--foreign 
	
	autoconf
	
	MAKEFLAGS=-j1 CC=gcc CXX=g++ \
		./configure \
			--prefix=/usr \
			--disable-ogre

	make
	make DESTDIR=$PKG install
}

