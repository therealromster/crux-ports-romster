# Description: API for packets queued by the kernel packet filter
# URL: http://www.netfilter.org/projects/libnetfilter_queue/index.html
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Nathan Pardoe, lithium at poolofrandomness dot com
# Depends on: libnfnetlink

name=libnetfilter_queue
version=0.0.15
release=1
url='http://www.netfilter.org/projects/libnetfilter_queue/files'
up2date="lynx -dump '$url/?C=M;O=D' |grep tar.bz2$ |sed -ne 's/.*-\(.*\)\.t.*/\1/' -e '1 p'"
source=($url/$name-$version.tar.bz2)

build() {
    cd $name-$version

    ./configure \
	 	--prefix=/usr \
		--disable-static

    make
    make DESTDIR=$PKG install
}

