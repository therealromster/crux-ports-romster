# Description: Cross platform audio library and toolset.
# URL: http://www.fmod.org/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Jose V Beneyto, joberui at ei dot upv dot es
# Depends on:   

name=libfmod3
version=3.75
release=1
source=(http://www.fmod.org/index.php/release/version/fmodapi${version//.}linux.tar.gz)

build() {
	install -d $PKG/usr/include/fmod
	install -m644 $SRC/fmodapi${version//.}linux/api/inc/* -t $PKG/usr/include/fmod
	install -D -m755 $SRC/fmodapi${version//.}linux/api/libfmod-$version.so $PKG/usr/lib/libfmod-$version.so
	ln -s /usr/lib/libfmod-$version.so $PKG/usr/lib/libfmod.so
	chown -R root:root $PKG
}

