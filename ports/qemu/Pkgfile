# Description: Is a generic and open source machine emulator and virtualizer.
# URL: http://www.nongnu.org/qemu/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Antonio SJ Musumeci
# Depends on: libsdl

name=qemu
version=0.10.4
release=1
source=(http://download.savannah.gnu.org/releases/$name/$name-$version.tar.gz
	70-kqemu.rules)
up2date_url="http://download.savannah.gnu.org/releases-noredirect/$name/"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--cc="${CC:=gcc}" \
		--host-cc="${CC:=gcc}"

	make
	make DESTDIR=$PKG install
	install -m 0644 -D $SRC/70-kqemu.rules $PKG/etc/udev/rules.d/70-kqemu.rules
}

