# Description: Java 2 Runtime Kit 32bit.
# URL:         http://www.oracle.com/technetwork/java/index.html
# Maintainer:  Danny Rawlins, monster dot romster at gmail dot com
# Packager:    Simone Rota, sip at crux dot nu
# Depends on: xorg-libxtst-32 xorg-libxi-32

##export MOZ_PLUGIN_PATH="/usr/lib/mozilla/plugins"  "${pkgdir}/etc/profile.d/"
 
name=jre-32
version=1.7.0_40
release=1
source=(file:///jre-7u40-linux-i586.tar.gz)

build() {
	cd jre$version

	install -d $PKG/usr/{bin,man,lib32/jre}
	mv bin lib plugin $PKG/usr/lib32/jre
	ln -s jre $PKG/usr/lib32/java
}
