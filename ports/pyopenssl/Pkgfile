# Depends on: python

name=pyopenssl
sname=pyOpenSSL
version=0.10
release=1
source="http://pypi.python.org/packages/source/p/$sname/$sname-$version.tar.gz"

build() {
	cd $sname-$version
	python setup.py install --root=$PKG
}
