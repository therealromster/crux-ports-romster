# Description: crosstool-NG aims at building toolchains.
# URL: http://ymorin.is-a-geek.org/dokuwiki/projects/crosstool
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Alex Kostrewa, alexko256 at googlemail dot com
# Depends on: texinfo

name=crosstool-ng
version=1.10.0
release=1
source="http://ymorin.is-a-geek.org/download/$name/$name-$version.tar.bz2"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--libdir=/usr/lib/ct-ng

	#--libdir is not honnored workaround
	sed -i -e "s|^LIBDIR := /usr/lib/ct-ng/ct-ng-${version}$|LIBDIR := /usr/lib/ct-ng/|" Makefile

	make
	make -j 1 DESTDIR=$PKG install

	rm -r $PKG/usr/share/doc
	rmdir $PKG/usr/share
}
