# Description: engine for structured graphics
# URL: http://developer.gnome.org/doc/API/2.0/libgnomecanvas/index.html
.*$Matt Housh, jaeger at morpheus dot net
# Depends on: gtk libart_lgpl libglade
# Group: gnome/platform

name=libgnomecanvas
version=2.20.1.1
release=1
gnomever=2.24.3
source=(http://download.gnome.org/platform/${gnomever%.*}/$gnomever/sources/$name-$version.tar.bz2)

build() {
	cd $name-$version
	rm po/*.po
	sed -i -e 's/USE_NLS=yes/USE_NLS=no/' \
		-e 's/ENABLE_NLS 1/ENABLE_NLS 0/' configure
	./configure --prefix=/usr \
		--disable-gtk-doc
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share
}
