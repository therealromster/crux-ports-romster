# Description: List or change SCSI/ATAPI disk parameters.
# URL: http://sg.torque.net/sg/sdparm.html
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: acrux

name=sdparm
version=1.03
release=1
url='http://sg.torque.net/sg'
up2date="lynx -dump '$url/sdparm.html' |grep 'sdparm' |sort -n -r |grep -m1 '.tgz$' |sed 's/.*-\(.*\).t.*/\1/'"
source=($url/p/$name-$version.tgz)

build() {
	cd $name-$version
	 
	./configure \
		--prefix=/usr/sbin \
		--mandir=/usr/man \
		--disable-dependency-tracking
    
	make
	make DESTDIR=$PKG install
}

