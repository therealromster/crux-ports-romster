name=safe-build-dev
version=20090523-1843
release=1
source="ftp://romster.dyndns.org/linux/source/safe-build/safe_build-$version.tar.bz2"

build() {
	cd safe_build-$version
	make
	make DESTDIR=$PKG install
}
