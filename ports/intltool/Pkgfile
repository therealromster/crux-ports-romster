# Description: Internationalization tool collection.
# URL: http://freshmeat.net/projects/intltool/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Jose V Beneyto, joberui at ei dot upv dot es
# Depends on: p5-xml-parser

name=intltool
version=0.40.5
release=1
url="http://ftp.gnome.org/pub/GNOME/sources/$name/${version%.*}"
up2date="lynx -dump $url |grep 'LATEST-IS-' |sed -ne 's/.*LATEST-IS-\(.*\)$/\1/' -e '$ p'"
source=($url/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man

	make
	make DESTDIR=$PKG install
}

