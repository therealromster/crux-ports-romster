name=mutagen
version=1.15
release=1
source="http://www.sacredchao.net/~piman/software/mutagen-$version.tar.gz"

build() {
    cd mutagen-$version
	 sed -i -e 's|share/man/man1|man/man1|g' setup.py
    python setup.py build
    python setup.py install --root $PKG
}
