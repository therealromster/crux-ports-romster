# Description: A port of 7-zip for POSIX systems
# URL: http://p7zip.sourceforge.net/
# Maintainer: Matt Housh, jaeger at crux dot nu

name=p7zip
version=4.45
release=1
source=(http://prdownloads.sourceforge.net/$name/${name}_${version}_src_all.tar.bz2)

build() {
	cd ${name}_$version
	sed -i -e "s/OPTFLAGS=.*/OPTFLAGS=$CFLAGS/" makefile.machine
	make 7za sfx
	sh install.sh usr/bin usr/lib/$name usr/man $PKG/
	rm -f $PKG/usr/bin/7za $PKG/usr/man/man1/7zr*
	ln -s /usr/lib/$name/7za $PKG/usr/bin/7za
	ln -s /usr/lib/$name/7za $PKG/usr/bin/7z
	rm -rf $PKG/usr/local
	chmod -R u+rw $PKG
}
