# Description: Library for loading and saving image formats.
# URL: http://freeimage.sourceforge.net/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: nacho
# Depends on: unzip

# Recommended:	
# Optional:	
# Category:	library

name=freeimage
version=3.10.0
release=1
source=(http://dl.sourceforge.net/sourceforge/freeimage/FreeImage${version//./}.zip)
 
build() {
	cd FreeImage

	sed -i \
		-e "s|^INSTALLDIR =.*|INSTALLDIR = $PKG/usr/lib|" \
		-e '/^	ldconfig/d' Makefile.gnu

	install -d $PKG/usr/lib
	make
	make install
	install -D -m 0644 Dist/FreeImage.h $PKG/usr/include/FreeImage.h
	ln -sf /usr/lib/libfreeimage-$version.so $PKG/usr/lib/libfreeimage.so
}

