# Description: An SVG library based on libart.
# URL: http://librsvg.sourceforge.net/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Matt Housh, jaeger at morpheus dot net
# Depends on: gtk libgsf libcroco
# Optional: gnome-vfs


name=librsvg
version=2.22.2
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/librsvg/${version%.*}/librsvg-$version.tar.bz2)

build() {
	cd librsvg-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--disable-static \
		--disable-mozilla-plugin \
		--with-svgz \
		--with-croco

	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/{lib/mozilla,share/gtk-doc}
}

