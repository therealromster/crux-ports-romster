# Description: Intermediate Queueing Device, Iptables filter.
# URL: http://www.linuximq.net/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Danny Rawlins, monster dot romster at gmail dot com

name=iptables-imq
version=1.4.12
release=1
source="
	ftp://ftp.netfilter.org/pub/iptables/iptables-$version.tar.bz2
	http://www.linuximq.net/patchs/iptables-1.4.10-imq.patch
"

build() {
	cd iptables-$version

	patch -p 1 -i $SRC/iptables-1.4.10-imq.patch
	
	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--libexecdir=/usr/lib \
		--enable-libipq

	make
	make DESTDIR=$PKG install
}
