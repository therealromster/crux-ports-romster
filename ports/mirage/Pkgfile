# Description: A fast and simple GTK+ image viewer.
# URL: http://mirageiv.berlios.de/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Danny Rawlins, romster at shortcircuit dot net dot au
# Depends on: pygtk

name=mirage
version=0.9.5.2
release=1
source=(http://download.berlios.de/mirageiv/mirage-$version.tar.bz2
	mirage.desktop)

build() {
	cd mirage-$version
	python setup.py install --root=$PKG
	install -D $SRC/mirage.desktop $PKG/usr/share/applnk/Applications/mirage.desktop
	rm $PKG/usr/share/mirage/{README,COPYING,CHANGELOG,TODO,TRANSLATORS}
	rm -r $PKG/usr/share/locale
}

