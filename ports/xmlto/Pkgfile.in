# Description: Convert xml to many other formats.
# URL: http://cyberelk.net/tim/software/xmlto/
# Maintainer: Danny Rawlins, crux at romster dot me
# Packager: Matt Housh, jaeger at morpheus dot net
# Depends on: docbook-xsl

name=xmlto
version=#exec lsurl.py --common-ext https://fedorahosted.org/releases/x/m/xmlto/ | filter-tool.py --show-ranking --show-failed --print-sorted --head 1 | awk 'NF {print $3}'
release=1
source=(https://fedorahosted.org/releases/x/m/xmlto/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \\
		--prefix=/usr \\
		--mandir=/usr/man

	make
	make DESTDIR=$PKG install
}

