# Description: The Library of Assorted Spiffy Things.
# URL: http://www.eterm.org/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: acrux, acrux at linuxmail dot org
# Depends on: freetype imlib2 libpcre

name=libast
version=0.7
release=1
url='http://www.eterm.org/download'
up2date="lynx -dump '$url' |grep -v Eterm |grep 'tar.gz$' |sed -ne 's/.*-\(.*\)\.t.*/\1/' -e '$ p'"
source=($url/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--with-gnu-ld \
		--with-x \
		--enable-mmx \
		--disable-nls \
		--disable-static

	make
	make DESTDIR=$PKG install
}

