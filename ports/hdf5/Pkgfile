# Description: A general purpose library and file format for storing scientific data.
# URL: http://www.hdfgroup.org/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: acrux, acrux at linuxmail dot org
# Depends on: szip zlib

name=hdf5
version=1.6.6
release=it1
source=(ftp://ftp.hdfgroup.org/HDF5/current/src/hdf5-$version.tar.gz)

build() {
	cd hdf5-$version

	./configure \
		--prefix=$PKG/usr \
		--mandir=$PKG/man \
		--with-gnu-ld \
		--enable-threadsafe \
		--with-ssl \
		--with-pthread \
		--enable-cxx \
		--with-zlib
	 
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/doc
}

