# Description: Userspace tools for netfilter connection tracking.
# URL: http://conntrack-tools.netfilter.org/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Danny Rawlins, romster at shortcircuit dot net dot au
# Depends on: libnetfilter_conntrack libnfnetlink

name=conntrack-tools
version=0.9.9
release=1
url="http://www.netfilter.org/projects/$name/files"

up2date="lynx -dump '$url/?C=M;O=D' | grep tar.bz2$ | \
	sed -ne 's/.*-\(.*\)\.t.*/\1/' -e '1 p'"

source=($url/$name-$version.tar.bz2
	conntrackd.rc)

mirrors="
	http://www.ar.netfilter.org/projects/$name/files/
	http://www.at.netfilter.org/projects/$name/files/
	http://www.au.netfilter.org/projects/$name/files/
	http://www.be.netfilter.org/projects/$name/files/
	http://www.bg.netfilter.org/projects/$name/files/
	http://www.cl.netfilter.org/projects/$name/files/
	http://www.cn.netfilter.org/projects/$name/files/
	http://www.cr.netfilter.org/projects/$name/files/
	http://www.de.netfilter.org/projects/$name/files/
	http://www.es.netfilter.org/projects/$name/files/
	http://www.gr.netfilter.org/projects/$name/files/
	http://www.hu.netfilter.org/projects/$name/files/
	http://www.ie.netfilter.org/projects/$name/files/
	http://www.il.netfilter.org/projects/$name/files/
	http://www.in.netfilter.org/projects/$name/files/
	http://www.it.netfilter.org/projects/$name/files/
	http://www.lt.netfilter.org/projects/$name/files/
	http://www.my.netfilter.org/projects/$name/files/
	http://www.nl.netfilter.org/projects/$name/files/
	http://www.no.netfilter.org/projects/$name/files/
	http://www.pl.netfilter.org/projects/$name/files/
	http://www.ro.netfilter.org/projects/$name/files/
	http://www.ru.netfilter.org/projects/$name/files/
	http://www.sk.netfilter.org/projects/$name/files/
	http://www.tr.netfilter.org/projects/$name/files/
	http://www.tw.netfilter.org/projects/$name/files/
	http://www.us.netfilter.org/projects/$name/files/
"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--disable-static

	make
	make DESTDIR=$PKG install
	install -m 0755 -D $SRC/conntrackd.rc $PKG/etc/rc.d/conntrackd

	install -m 0644 -D doc/stats/conntrackd.conf \
		$PKG/etc/conntrackd/conntrackd.conf
}
