# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Danny Rawlins, monster dot romster at gmail dot com
# Depends on: 

name=xorg-cursor-bridge
version=1.0.0
release=1
source=(http://xfce-look.org/CONTENT/content-files/164587-bridge.tar.gz)

build() {
	install -d $PKG/usr/share/icons/bridge
	cd bridge
	cp -R * $PKG/usr/share/icons/bridge/
}

