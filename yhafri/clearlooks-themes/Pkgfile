build () {
        mkdir -p $PKG/usr/share/themes/

	cd TheWidgetFactory-0.2
	./configure
	make
	install -D -m 755 src/twf $PKG/usr/bin/clearlooks-test
	cd ..
	rm -rf TheWidgetFactory-0.2

        mv * $PKG/usr/share/themes/

        chown -R root:root $PKG
}
