makefile=makefile

printf '# make rules generated by depgen %s -*- makefile -*-\n' "`date +%Y%m%d`"
for f in "$@"; do
    hdeps=
    hfiles=`sed -n 's/^ *#include  *[<"]\(.*\.h\)[">].*/\1/p' $f | xargs`; 
    for h in $hfiles; do
        if test ! $h = config.h -a -r $h; then
            hdeps="$hdeps \${srcdir}/$h"
        fi
    done
    obj=`echo $f | sed -e 's/\(.*\)\..*$/\1.o/'`
    printf "%s\n\t%s\n" "$obj : \${srcdir}/$f $hdeps $makefile" \
      "\${COMPILE} \${srcdir}/$f"
done

