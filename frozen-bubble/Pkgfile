# Description: Shoot balls and get so many in a row to make them drop.
# URL: http://www.frozen-bubble.org/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Danny Rawlins, romster at shortcircuit dot net dot au
# Depends on: p5-sdl1-perl, sdl_pango

# Recommended: 
# Optional: 
# Category: games, arcade

name=frozen-bubble
version=2.1.0
release=1
source=(http://www.frozen-bubble.org/data/frozen-bubble-$version.tar.bz2)

build() {
	cd $name-$version
	
	sed -i \
		-e "s|PREFIX = .*|PREFIX = /usr|" \
		-e 's|MANDIR = .*|MANDIR = $(PREFIX)/man|' settings.mk

	make && make DESTDIR=$PKG install
	rm -r $PKG/usr/share/locale

	rm \
		$PKG/usr/lib/perl5/*/linux/perllocal.pod \
		$PKG/usr/lib/perl5/site_perl/*/linux/auto/fb_c_stuff/{fb_c_stuff.bs,.packlist}
}

