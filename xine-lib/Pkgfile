# Description:	A free, GPL-licensed video player for UNIX-like systems.
# URL:			http://xine.sourceforge.net
# Maintainer:	Danny Rawlins, <romster@shortcircuit.net.au>
# Packager:		sten, nick dot steeves at shaw dot ca
# Depends on:	x11, libpng, alsa-lib, libdvdnav, libogg, libvorbis, esound, flac, libsdl, arts, libmng, libmad, liba52, samba, speex, libtheora, faad2

name=xine-lib
version=1.1.2
release=2
source=(http://dl.sourceforge.net/sourceforge/xine/$name-$version.tar.bz2)

build() {
	unset CFLAGS CXXFLAGS
	cd $name-$version
	
	./configure --prefix=/usr \
		--disable-nls \
		--mandir=/usr/man

	make && make DESTDIR=$PKG install
	rm -r $PKG/usr/share/doc
	chown -R root:root $PKG
}

