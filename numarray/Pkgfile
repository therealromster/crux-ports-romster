name=numarray
version=1.5.2
release=1
source=(http://dl.sourceforge.net/sourceforge/numpy/$name-$version.tar.gz)

build () {
	cd $name-$version
	python setup.py install --root=$PKG
	chown -R root:root $PKG
}
