# Description:	A set of utilities to manage software packages.
# URL: http://www.fukt.bsnet.se/~per/pkgutils/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: CRUX System Team, core-ports at crux dot nu
# Depends on: libarchive

name=pkgutils
version=5.31.0
release=4
source=(http://crux.nu/files/pkgutils-$version.tar.gz \
	pkgutils-$version-lzma-decompress.patch \
	pkgutils-$version-lzma-compress-package.patch \
	pkgutils-$version-warn-on-footprint-new-files.patch \
	pkgutils-$version-add-sha256-support.patch \
	pkgutils-$version-source-diff-download.patch)

build() {
	cd pkgutils-$version

	patch -p1 -i $SRC/pkgutils-$version-lzma-decompress.patch
	#patch -p1 -i $SRC/pkgutils-$version-lzma-compress-package.patch
	patch -p1 -i $SRC/pkgutils-$version-warn-on-footprint-new-files.patch

	#patch -p1 -i $SRC/pkgutils-$version-source-diff-download.patch

	# predatorfreak's patch.
	# http://dcaf-security.org/ports/pkgutils/pkgutils-5.31.0-add-sha256-support.patch
	patch -p1 -i $SRC/pkgutils-$version-add-sha256-support.patch 
	
	make DESTDIR=$PKG install
}

