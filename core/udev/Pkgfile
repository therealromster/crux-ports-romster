# Description: Userspace device management daemon
# URL: http://www.kernel.org/pub/linux/utils/kernel/hotplug/udev.html
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: CRUX System Team, core-ports at crux dot nu
# Depends on: 

name=udev
version=120
config_version=20080217
release=1
source=(ftp://ftp.kernel.org/pub/linux/utils/kernel/hotplug/udev-$version.tar.bz2 \
	http://crux.nu/files/distfiles/udev-config-$config_version.tar.bz2 \
	start_udev 61-cdrom.rules 60-cdrom_id.rules cdsymlinks)
#http://www.linuxfromscratch.org/lfs/downloads/development/udev-config-$config_version.tar.bz2
build() {
	local extras="extras/ata_id \
		extras/cdrom_id \
		extras/edd_id \
		extras/firmware \
		extras/floppy \
		extras/path_id \
		extras/scsi_id \
		extras/usb_id \
		extras/volume_id"

	cd udev-$version

	make EXTRAS="$extras"
	make DESTDIR=$PKG mandir=/usr/man EXTRAS="$extras" install

	pushd $SRC/udev-config-$config_version
	make DESTDIR=$PKG install
	popd

	install -d $PKG/lib/{firmware,udev/devices/{pts,shm}}

	#mknod -m 600 $PKG/lib/udev/devices/console c 5 1
	mknod -m 666 $PKG/lib/udev/devices/null c 1 3
	#mknod -m 666 $PKG/lib/udev/devices/zero c 1 5

	ln -s /proc/self/fd   $PKG/lib/udev/devices/fd
	ln -s /proc/self/fd/0 $PKG/lib/udev/devices/stdin
	ln -s /proc/self/fd/1 $PKG/lib/udev/devices/stdout
	ln -s /proc/self/fd/2 $PKG/lib/udev/devices/stderr
	ln -s /proc/kcore     $PKG/lib/udev/devices/core

	install -m 0755 $SRC/start_udev         $PKG/sbin
	install -m 0755 $SRC/cdsymlinks         $PKG/lib/udev/
	install -m 0644 etc/udev/rules.d/[0-9]* $PKG/etc/udev/rules.d/
	install -m 0644 $SRC/61-cdrom.rules     $PKG/etc/udev/rules.d/

	# override this file in udev-config for cd/dvd permissions
	install -m 0644 $SRC/60-cdrom_id.rules  $PKG/etc/udev/rules.d/

	# Comment uucp lines
	sed -i 's|.*uucp.*|#&|g' $PKG/etc/udev/rules.d/50-udev-default.rules
	sed -i 's|.*uucp.*|#&|g' $PKG/etc/udev/rules.d/55-lfs.rules
}

