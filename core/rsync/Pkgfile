# Description: Utility for incremental file transfers over networks.
# URL: http://rsync.samba.org/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Jürgen Daubert, juergen dot daubert at t-online dot de
# Depends on: openssh

name=rsync
version=3.0.3
release=1
url="http://rsync.samba.org/ftp/$name"
up2date="lynx -dump '$url/?C=M;O=D' |grep tar.gz$|sed -ne 's/.*-\(.*\)\.t.*/\1/' -e '1 p'"
source=(http://rsync.samba.org/ftp/rsync/rsync-$version.tar.gz \
	rsyncd.conf rsyncd rsync.driver)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--with-rsh=ssh \
		--with-included-popt

	make
	make DESTDIR=$PKG install

	install -m 0755 -D $SRC/rsyncd $PKG/etc/rc.d/rsyncd
	install -m 0644 -D $SRC/rsyncd.conf $PKG/etc/rsyncd.conf
	install -m 0755 -D $SRC/rsync.driver $PKG/etc/ports/drivers/rsync
	install -d $PKG/var/log
	touch $PKG/var/log/rsyncd.log
}

