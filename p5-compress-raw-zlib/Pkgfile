# Description: Compress::Raw::Zlib - Low-Level Interface to zlib compression library.
# URL: http://search.cpan.org/~pmqs/Compress-Raw-Zlib-2.001/
# Maintainer: Danny Rawlins, romster at shortcircuit dot net dot au
# Packager: Danny Rawlins, romster at shortcircuit dot net dot au
# Depends on: 


name=p5-compress-raw-zlib
version=2.001
release=1
source=(http://search.cpan.org/CPAN/authors/id/P/PM/PMQS/Compress-Raw-Zlib-$version.tar.gz)

build() {
	cd Compress-Raw-Zlib-$version
		
	perl Makefile.PL
	make OPTIMIZE="$CFLAGS"
	make DESTDIR=$PKG install

	# Remove perlcrap
	find $PKG \
		-name '.packlist' -delete -or \
		-name '*.bs' -delete -or \
		-name 'autosplit.ix' -delete -or \
		-name 'perllocal.pod' -delete

	# Remove empty directories
	find $PKG -depth -empty -exec rm -rf {} \;
}

