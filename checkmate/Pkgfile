# $Id: 
# Description:	Checkmate is a set of programs which scan MP3 files for errors.
# URL:		http://checkmate.linuxonly.nl/
# Maintainer:	Danny Rawlins, <romster@shortcircuit.net.au>
# Packager:	Danny Rawlins, <romster@shortcircuit.net.au>
# Depends on:	

name=checkmate
version=0.15
release=1
source=(http://$name.linuxonly.nl/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr
	make && make DESTDIR=$PKG install
	chown -R root:root $PKG
}

